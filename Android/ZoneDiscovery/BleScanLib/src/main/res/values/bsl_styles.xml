<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay"
      parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay"
      parent="ThemeOverlay.AppCompat.Light"/>

  <style name="bsl_ActionMessage">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/bsl__32sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:padding">@dimen/bsl__12dp</item>
    <item name="android:layout_marginLeft">@dimen/bsl__12dp</item>
    <item name="android:layout_marginRight">@dimen/bsl__12dp</item>
    <item name="android:layout_marginBottom">@dimen/bsl__12dp</item>
    <item name="android:layout_marginTop">@dimen/bsl__90dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/bsl_action_message_text_color</item>
    <item name="android:background">@drawable/bsl_action_message_border</item>
  </style>

  <style name="bsl_LoadingMessage">
    <item name="android:textColor">@color/bsl_action_message_text_color</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/bsl__12sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingTop">@dimen/bsl__12dp</item>
    <item name="android:paddingRight">@dimen/bsl__12dp</item>
    <item name="android:paddingLeft">@dimen/bsl__12dp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="bsl_HorizontalProgressBar"
      parent="Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="bsl_HorizontalProgressBar.Indeterminate">
    <item name="android:indeterminate">true</item>
  </style>

  <style name="bsl_LoadingLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginLeft">@dimen/bsl__40dp</item>
    <item name="android:layout_marginRight">@dimen/bsl__40dp</item>
    <item name="android:layout_marginTop">@dimen/bsl__n40dp</item>
  </style>

  <style name="bsl_DeviceSummaryLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">@dimen/bsl__4dp</item>
    <item name="android:layout_marginTop">@dimen/bsl__4dp</item>
    <item name="android:padding">@dimen/bsl__16dp</item>
  </style>

  <style name="bsl_DeviceSummaryRssi">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:background">@color/colorAccent</item>
    <item name="android:padding">@dimen/bsl__20dp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/bsl__30sp</item>
    <item name="android:textStyle">bold|italic</item>
  </style>

  <style name="bsl_DeviceSummaryName"
      parent="bsl_DeviceSummaryText">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/bsl__18sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="bsl_DeviceSummaryText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    <item name="android:textColor">@color/bsl_text_color</item>
    <item name="android:textSize">@dimen/bsl__14sp</item>
    <item name="android:textStyle">bold|italic</item>
  </style>

  <style name="bsl_DeviceSummaryButton"
      parent="bsl_DeviceSummaryText">

  </style>


  <style name="bsl_ProgressBar"
      parent="bsl_HorizontalProgressBar.Indeterminate">
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_marginTop">@dimen/bsl__n7dp</item>
  </style>

</resources>
