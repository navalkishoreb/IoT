<manifest package="com.talentica.blescanlib"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_LE"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <uses-permission-sdk-23 android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application>
        <activity
            android:name=".scanning.Scanning"
            android:label="@string/bsl_tag_fragment_search"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>
        <service
            android:name=".scanning.service.BackgroundDeviceScanService"
            android:enabled="true"
            android:exported="false"
            android:process=":scanProcess"
            >
        </service>

    </application>

</manifest>
