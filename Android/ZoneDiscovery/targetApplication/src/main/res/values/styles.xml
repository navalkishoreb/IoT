<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="ZoneDeviceName">
    <item name="android:minHeight">@dimen/__120dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/__42sp</item>
    <item name="android:maxLines">@integer/zone_label_name_max_lines</item>
    <item name="android:ellipsize">end</item>
    <item name="android:layout_marginTop">@dimen/__12dp</item>
    <item name="android:padding">@dimen/__12dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:text">@string/zone_default_name</item>
  </style>


  <string name="zone_default_name">---</string>
</resources>
