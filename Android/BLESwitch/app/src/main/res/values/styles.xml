<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ActionMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/__32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/__12dp</item>
        <item name="android:layout_marginLeft">@dimen/__12dp</item>
        <item name="android:layout_marginRight">@dimen/__12dp</item>
        <item name="android:layout_marginBottom">@dimen/__12dp</item>
        <item name="android:layout_marginTop">@dimen/__90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/action_message_text_color</item>
        <item name="android:background">@drawable/action_message_border</item>
    </style>

    <style name="LoadingMessage">
        <item name="android:textColor">@color/action_message_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/__12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/__12dp</item>
        <item name="android:paddingRight">@dimen/__12dp</item>
        <item name="android:paddingLeft">@dimen/__12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HorizontalProgressBar.Indeterminate">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="LoadingLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/__40dp</item>
        <item name="android:layout_marginRight">@dimen/__40dp</item>
        <item name="android:layout_marginTop">@dimen/__n40dp</item>
    </style>

    <style name="DeviceSummaryLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/__4dp</item>
        <item name="android:layout_marginTop">@dimen/__4dp</item>
        <item name="android:padding">@dimen/__16dp</item>
    </style>

    <style name="DeviceSummaryRssi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/__20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/__30sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="DeviceSummaryName" parent="DeviceSummaryText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/__18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DeviceSummaryText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/__14sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="DeviceSummaryButton" parent="DeviceSummaryText">

    </style>

    <style name="ColorSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/__20dp</item>
        <item name="android:max">@integer/max_color_value</item>
        <!--<item name="android:layout_marginTop">@dimen/__12dp</item>-->
        <!--<item name="android:layout_marginBottom">@dimen/__12dp</item>-->
    </style>

    <style name="ColorValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">@dimen/__12dp</item>
        <item name="android:numeric">integer</item>
        <item name="android:maxLength">3</item>
        <item name="android:minWidth">@dimen/__50dp</item>
        <item name="android:text">0</item>
    </style>

    <style name="ColorLabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">@dimen/__12dp</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="ProgressBar" parent="HorizontalProgressBar.Indeterminate">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/__n7dp</item>
    </style>

</resources>
