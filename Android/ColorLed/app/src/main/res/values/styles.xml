<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HorizontalProgressBar.Indeterminate">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ColorSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/__20dp</item>
        <item name="android:max">@integer/max_color_value</item>
    </style>

    <style name="ColorValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">@dimen/__12dp</item>
        <item name="android:numeric">integer</item>
        <item name="android:maxLength">3</item>
        <item name="android:minWidth">@dimen/__50dp</item>
        <item name="android:text">0</item>
    </style>

    <style name="ColorLabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">@dimen/__12dp</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="ProgressBar" parent="HorizontalProgressBar.Indeterminate">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/__n7dp</item>
    </style>

</resources>
